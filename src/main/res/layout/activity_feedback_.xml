<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fbfdff"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="171dp"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:textColor="#123"
            android:textStyle="bold"
            android:text="1)How would you rate the food?"
            android:layout_weight="0.35" />


        <RatingBar
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="171dp"
            android:layout_height="45dp"
            android:layout_marginLeft="13dp"
            android:layout_weight="0.34"
            android:text="2)How would you rate the service?"
            android:textAlignment="center"
            android:textColor="#123"
            android:textSize="15dp"
            android:textStyle="bold" />


        <RatingBar
            android:id="@+id/r2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.02" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="171dp"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="0.35"
            android:text="3)How was the hygiene level of staff?"
            android:textAlignment="center"
            android:textColor="#123"
            android:textSize="15dp"
            android:textStyle="bold" />


        <RatingBar
            android:id="@+id/r3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.02" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="171dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.34"
            android:text="4)How was the overall ambience?"
            android:textAlignment="center"
            android:textColor="#123"
            android:textSize="15dp"
            android:textStyle="bold" />


        <RatingBar
            android:id="@+id/r4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="5)Any other comments/feedback"
            android:textAlignment="center"
            android:textColor="#123"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText3"
            android:layout_width="149dp"
            android:layout_height="56dp"
            android:layout_weight="0.64"
            android:ems="10"
            android:hint="Comment"
            android:inputType="textPersonName"
            android:text=" "
            android:textAlignment="center" />

    </LinearLayout>

    <Button
        android:id="@+id/b3"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:background="#0b0be6"
        android:gravity="center"
        android:text="Submit"
        android:onClick="feed"
        android:textColor="#06fa17"
        android:textSize="30dp" />


</LinearLayout>